<div class="card">
  <div class="card-header">
  <h2 style="text-align:left;">Log in</h2>
  </div>
  <div class="card-body">
   
  <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
    <div class="field form-group">
     
      <%= f.email_field :email, autofocus: true, autocomplete: "email" ,class:"form-control ", placeholder:"Enter Your Email",style: "text-align: left;width:400px;"%>
    </div>
  <br>
    <div class="field form-group">
      
    <%= f.password_field :password, autocomplete: "current-password", class: "form-control", placeholder: "Enter a Password", style: "text-align: left;width:400px;" %>
  
    </div>
  <br>
    <% if devise_mapping.rememberable? %>
      <div class="field form-check">
        <%= f.check_box :remember_me ,class:"form-check-input" %>
        <%= f.label :remember_me %>
      </div>
    <% end %>
    <br>
  
    <div class="actions">
      <%= f.submit "Log in" ,class:"btn btn-secondary"%>
    </div>
  <% end %>
  <br>


  </div>
</div>









<br>


